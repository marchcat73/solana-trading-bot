# ==================== APPLICATION ====================
APP_ENV=development
APP_NAME=solana-trading-bot
APP_VERSION=0.1.0
LOG_LEVEL=info
RUST_LOG=info,solana_trading_bot=debug

# ==================== SERVER ====================
HOST=0.0.0.0
PORT=8080
METRICS_PORT=9090
HEALTH_CHECK_PORT=8081

# ==================== TELEGRAM ====================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
TELEGRAM_ADMIN_USER_IDS=123456789,987654321
TELEGRAM_RATE_LIMIT_PER_MINUTE=30
TELEGRAM_RATE_LIMIT_PER_HOUR=300

# ==================== DATABASE ====================
DATABASE_URL=postgres://postgres:password@localhost:5432/solana_bot
DATABASE_POOL_MAX_CONNECTIONS=20
DATABASE_POOL_MIN_CONNECTIONS=5
DATABASE_CONNECT_TIMEOUT_SECS=30
DATABASE_ACQUIRE_TIMEOUT_SECS=30
DATABASE_IDLE_TIMEOUT_SECS=600
DATABASE_MAX_LIFETIME_SECS=1800

# ==================== SOLANA ====================
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# SOLANA_WS_URL=wss://api.mainnet-beta.solana.com
SOLANA_COMMITMENT=confirmed
SOLANA_TIMEOUT_MS=30000
SOLANA_RETRY_COUNT=3

# Для тестирования используйте devnet:
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# ==================== JUPITER API ====================
JUPITER_API_URL=https://api.jup.ag
JUPITER_API_VERSION=v1
JUPITER_TIMEOUT_SECS=30
JUPITER_MAX_RETRIES=3
JUPITER_API_KEY=optional_api_key_if_required

# ==================== SECURITY ====================
# Master key for encrypting wallet private keys
MASTER_ENCRYPTION_KEY=change_this_to_a_strong_random_key_32_bytes
SESSION_SECRET_KEY=another_strong_random_key_for_sessions
ENCRYPTION_ALGORITHM=AES256-GCM
PBKDF2_ITERATIONS=100000

# Paths for encrypted key storage
ENCRYPTED_KEYPAIR_PATH=./secrets/encrypted_wallet.bin
ENCRYPTED_MASTER_KEY_PATH=./secrets/master_key.bin

# ==================== TRADING LIMITS ====================
MAX_TRADE_AMOUNT_SOL=10.0
MIN_TRADE_AMOUNT_SOL=0.01
MAX_SLIPPAGE_BPS=200  # 2%
MAX_TRADES_PER_HOUR=10
MAX_TRADES_PER_DAY=50
DAILY_TRADE_LIMIT_SOL=100.0

# ==================== RATE LIMITING ====================
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST_SIZE=30
RATE_LIMIT_ENABLED=true

# ==================== MONITORING ====================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=your_sentry_dsn_here_optional
TELEMETRY_ENABLED=false

# ==================== AWS (for production) ====================
AWS_REGION=us-east-1
AWS_SECRETS_MANAGER_ENABLED=false
AWS_SECRETS_PATH=/solana-trading-bot/production/

# ==================== EMAIL NOTIFICATIONS ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_TLS=true

# ==================== API KEYS (Optional) ====================
COINGECKO_API_KEY=optional
BIRDEYE_API_KEY=optional
HELIUS_API_KEY=optional
